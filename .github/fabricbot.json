[
  {
    "taskSource": "fabricbot-config",
    "taskType": "trigger",
    "capabilityId": "IssueResponder",
    "subCapability": "IssuesOnlyResponder",
    "version": "1.0",
    "config": {
      "taskName": "Add untriaged label to new/reopened issues without a milestone",
      "conditions": {
        "operator": "or",
        "operands": [
          {
            "name": "isAction",
            "parameters": {
              "action": "opened"
            }
          },
          {
            "name": "isAction",
            "parameters": {
              "action": "reopened"
            }
          }
        ]
      }
    },
    "actions": [
      {
        "name": "addLabel",
        "parameters": {
          "label": "untriaged"
        }
      }
    ],
    "eventType": "issue",
    "eventNames": [
      "issues"
    ]
  }
]
